@model appWizard.Models.StepViewThree

@{
    ViewData["Title"] = "New User Registration - STEP 3: Address";
    ViewData["Step"] = "STEP 3: Address";
}


<nav id="mainNav">
        <div class="grid-circle">
            <div class="circle-img">
                <div class="circle-blue">1</div>
            </div>
            <div class="circle-info">
                Contact Info
            </div>
        </div>

        <div class="grid-circle">
            <div class="circle-img">
                <div class="circle-blue">2</div>
            </div>
            <div class="circle-info">
                Areas
            </div>
        </div>

        <div class="grid-circle">
            <div class="circle-img">
                <div class="circle-blue">✎..</div>
            </div>
            <div class="circle-info">
                Address
            </div>
        </div>

        <div class="grid-circle">
            <div class="circle-img">
                <div class="circle-white">4</div>
            </div>
            <div class="circle-info">
                Password
            </div>
        </div>

        <div class="grid-circle">
            <div class="circle-img">
                <div class="circle-white">5</div>
            </div>
            <div class="circle-info">
                Completed
            </div>
        </div>
    </nav>

    <article id="mainArticle" data-toggle-group="location">
        <form asp-action="ViewStepThree">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="grid-three">
                <div class="item-label">
                    <label asp-for="Country" class="control-label"><span class="star">*</span> COUNTRY:</label>
                </div>
                <div class="item-input">
                    <select asp-for="Country" class="form-control" name="Country" data-toggle="country" data-country=""></select>
                </div>
                <div class="item-valid">
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>

                <div class="item-label">
                    <label asp-for="OfficeName" class="control-label"><span class="star">*</span> OFFICE NAME:</label>
                </div>
                <div class="item-input">
                    <input asp-for="OfficeName" class="form-control" />
                </div>
                <div class="item-valid">
                    <span asp-validation-for="OfficeName" class="text-danger"></span>
                </div>

                <div class="item-label">
                    <label asp-for="Address" class="control-label"><span class="star">*</span> ADDRESS:</label>
                </div>
                <div class="item-input">
                    <textarea asp-for="Address" class="form-control"></textarea>
                </div>
                <div class="item-valid">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="item-label">
                    <label asp-for="PostalCode" class="control-label"><span class="star">*</span> POSTAL CODE:</label>
                </div>
                <div class="item-input">
                    <input asp-for="PostalCode" class="form-control" />
                </div>
                <div class="item-valid">
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>

                <div class="item-label">
                    <label asp-for="City" class="control-label"><span class="star">*</span> CITY:</label>
                </div>
                <div class="item-input">
                    <input asp-for="City" class="form-control" />
                </div>
                <div class="item-valid">
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="item-label">
                    <label asp-for="State" class="control-label"><span class="star">*</span> STATE:</label>
                </div>
                <div class="item-input">
                    <select asp-for="State" class="form-control" name="State" data-toggle="state" data-state=""></select>
                </div>
                <div class="item-valid">
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

                <div class="item-input">
                    <input type="hidden" asp-for="ModelId" />
                </div>
            </div>

            <div class="form-group">
                <a href='@Url.Action("ViewStepTwo", "Register", new { modelId = Model.ModelId }, null)' class="btn-back">Back</a>
                <input type="submit" value="Next" class="btn-next" />
            </div>
        </form>
    </article>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }     
    <script type="text/javascript">
        document.addEventListener("load", loadCountries());
    </script>  
}